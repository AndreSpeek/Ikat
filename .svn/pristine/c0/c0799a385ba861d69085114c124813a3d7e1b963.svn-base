* {
    --back: #0B5F8E;
    --accent: #8E3A0A;
    --light: #67C5B4;
}

body {
    margin: 0px;
    padding: 0px;
    padding-top: 55px;
    font-family: Verdana;
    color: var(--back);
    font-size: 13.5px;
}

h1 {
    color: var(--accent);
    margin-top: 0px;
    margin-bottom: 0px;
    font-size: 1.5rem;
}

a {
    color: var(--back);
    text-decoration: none;
}

input[type=text], input[type=password], textarea {
    padding: 4px;
    border: 1px solid #DDDDDD;
    color: #0B5F8E;
    outline: none;
    border-radius: 3px;
}
    input[type=text]:focus, textarea:focus {
        border: 1px solid var(--light);
    }
    input[type=text]::selection, textarea::selection {
        background-color: var(--accent);
        color: #FFFFFF;
        box-shadow: 0px 0px 3px var(--accent);
    }
input:-webkit-autofill {
    -webkit-box-shadow: 0 0 0 30px white inset;
}

.topBar {
    position: fixed;
    top: 0px;
    left: 0px;
    width: 100%;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    height: 55px;
    padding-left: 35px;
    font-size: 39px;
    font-weight: bold;
    color: #FFFFFF;
    text-shadow: 0px 1px 2px #212121;
    background: url(images/ikat_t.jpg);
    background-repeat: repeat;
    box-shadow: 0px 0px 5px #212121;
}

.login {
    border: 1px solid #CCCCCC;
    padding: 21px;
    width: 300px;
}
    .login table {
        width: 100%;
    }
    .login th {
        padding: 7px 5px;
        text-align: left;
        color: var(--accent);
        border-bottom: 1px solid var(--back);
    }
    .login td {
        padding: 5px;
    }

.buttonBar {
    width: 100%;
    margin-bottom: 11px;
    background-color: #F4F4F4;
    border-bottom: 1px solid #DDDDDD;
}
    .buttonBar td {
        padding: 7px;
    }

.terms {
    border-collapse: collapse;
}
    .terms th {
        padding: 5px;
        border-bottom: 1px solid var(--back);
    }
    .terms tr td a {
        display: block;
        width: 100%;
        height: 100%;
    }
    .terms tr:hover td {
        background-color: var(--light) !important;
    }
        .terms tr:hover td a {
            color: #FFFFFF !important;
        }
    .terms td {
        padding: 5px;
        border-bottom: 1px solid #DDDDDD;
    }
    .terms tr:nth-child(even) td {
        background: #F1F1F1;
    }

.translator {
    border-collapse: collapse;
}
    .translator th {
        padding: 5px;
        text-align: left;
        background-color: var(--light);
        color: #FFFFFF;
    }
    .translator td {
        padding: 5px;
    }

.btnLarge {
    background-color: var(--accent);
    color: #FFFFFF;
    font-size: 15px;
    padding: 7px;
    border: 0px;
    border-radius: 3px;
    width: 165px;
    text-align: center;
}
.btnSmall {
    border: 1px solid var(--light);
    background-color: #FAFAFA;
    padding: 3px;
    font-size: 12px;
    width: 75px;
    cursor: pointer;
}
